{
  "name": "adonis-mcp-docs",
  "version": "0.1.0",
  "description": "MCP server to access adonis-mcp documentation",
  "type": "module",
  "license": "MIT",
  "bin": {
    "adonis-mcp-docs": "./build/bin/mcp.js"
  },
  "files": [
    "build"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "adonis",
    "adonisjs",
    "documentation",
    "ai",
    "llm"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/batosai/adonis-mcp-docs"
  },
  "scripts": {
    "start": "node bin/server.js",
    "build": "node ace build",
    "postbuild": "test -f .env.example && cp .env.example build/.env || true",
    "dev": "node ace serve --hmr",
    "test": "node ace test",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit"
  },
  "imports": {
    "#controllers/*": "./app/controllers/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#models/*": "./app/models/*.js",
    "#mails/*": "./app/mails/*.js",
    "#services/*": "./app/services/*.js",
    "#listeners/*": "./app/listeners/*.js",
    "#events/*": "./app/events/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#validators/*": "./app/validators/*.js",
    "#providers/*": "./providers/*.js",
    "#policies/*": "./app/policies/*.js",
    "#abilities/*": "./app/abilities/*.js",
    "#database/*": "./database/*.js",
    "#start/*": "./start/*.js",
    "#tests/*": "./tests/*.js",
    "#config/*": "./config/*.js"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/eslint-config": "^2.1.2",
    "@adonisjs/prettier-config": "^1.4.5",
    "@adonisjs/tsconfig": "^1.4.1",
    "@japa/assert": "^4.2.0",
    "@japa/plugin-adonisjs": "^4.0.0",
    "@japa/runner": "^4.4.0",
    "@swc/core": "1.11.24",
    "@types/node": "^22.19.3",
    "eslint": "^9.39.2",
    "hot-hook": "^0.4.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.7.4",
    "ts-node-maintained": "^10.9.6",
    "typescript": "~5.8.3"
  },
  "dependencies": {
    "@adonisjs/core": "^6.19.2",
    "@jrmc/adonis-mcp": "^1.0.0-beta.2",
    "reflect-metadata": "^0.2.2"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "hotHook": {
    "boundaries": [
      "./app/controllers/**/*.ts",
      "./app/middleware/*.ts"
    ]
  },
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/app"
  },
  "prettier": "@adonisjs/prettier-config"
}
